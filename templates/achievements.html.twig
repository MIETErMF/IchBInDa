{% extends 'base.html.twig' %}

{% block title %}My achievementslist{% endblock %}

{% block body %}
<h1>All achievements</h1>
<a href="{{ path('generate') }}" class="btn btn-primary">Generate</a>
<a href="{{ path('cleanup') }}" class="btn btn-primary">Clean up</a>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Power</th>
            <th>Name</th>
            <th>Done</th>
        </tr>
        </thead>
        <tbody>
        {% for achievemnt in  achievements %}
            <tr>
                <td>{{ achievemnt.id }}</td>
                <td>{{ achievemnt.power }}</td>
                <td>{{ achievemnt.name }}</td>
                <td>{{ achievemnt.done }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
